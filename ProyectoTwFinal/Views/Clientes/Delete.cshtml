@model ProyectoTwFinal.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="d-flex d-flex justify-content-center vh-100">
        <div class="col-md-6 text-center">
            <h3>¿Está seguro que desea eliminar este cliente?</h3>
            <hr />
            <img src="~/img/cliente/@Html.DisplayFor(model => model.Path)" height="300" width="300" />
            <dl class="row">
                <dt class="col-sm-6 text-end">
                    @Html.DisplayNameFor(model => model.Nombre):
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-6 text-end">
                    Dirección:
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dt class="col-sm-6 text-end">
                    Correo electrónico:
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-6 text-end">
                    @Html.DisplayNameFor(model => model.Edad):
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Edad) años
                </dd>
            </dl>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a class="btn btn-primary" asp-action="Index">Regresar a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>

