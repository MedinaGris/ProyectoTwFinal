@model ProyectoTwFinal.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="d-flex d-flex justify-content-center vh-100">
        <div class="col-md-6 text-center">
            <h1>Detalles del cliente</h1>
            <hr />
            <img src="~/img/cliente/@Html.DisplayFor(model => model.Path)" height="300" width="300" />
            <dl class="row">
                <dt class="col-sm-6 text-end">
                    @Html.DisplayNameFor(model => model.Nombre):
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-6 text-end">
                    Dirección:
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dt class="col-sm-6 text-end">
                    Correo electrónico:
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-6 text-end">
                    @Html.DisplayNameFor(model => model.Edad):
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Edad) años
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Id">Editar</a> &nbsp;
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model?.Id">Eliminar</a>&nbsp;
                <a asp-action="Index" class="btn btn-primary">  Regresar a la lista</a>
            </div>
        </div>
    </div>
</div>





