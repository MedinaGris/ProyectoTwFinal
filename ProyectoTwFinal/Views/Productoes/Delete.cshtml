@model ProyectoTwFinal.Models.Producto

@{
    ViewData["Title"] = "Delete";
}
@*
  Autores:Vicente Leonel Vásquez Hernández
  fecha creación:04/02/2023
  fecha actualización: 06/02/2023
  Descripción: Este archivo se encarga de eliminar
  un producto
*@


<div class="container">
    <div class="d-flex d-flex justify-content-center vh-100">
        <div class="col-md-6 text-center">
            <h3>¿Está seguro que desea eliminar este producto?</h3>
            <hr />
            <img src="~/img/producto/@Html.DisplayFor(model => model.Avatar)" height="300" width="300" />
            <dl class="row">
                <dt class="col-sm-6 text-end">
                    @Html.DisplayNameFor(model => model.Nombre):
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-6 text-end">
                    Código:
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class="col-sm-6 text-end">
                   Descripción:
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-6 text-end">
                    @Html.DisplayNameFor(model => model.Cantidad):
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Cantidad)
                </dd>
            </dl>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a class="btn btn-primary" asp-action="Index">Regresar a la lista</a>
                </form>
            </div>
        </div>
    </div>

</div>



