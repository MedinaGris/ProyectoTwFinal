@model ProyectoTwFinal.Models.Producto

@{
    ViewData["Title"] = "Details";
}
@*
  Autores:Vicente Leonel Vásquez Hernández
  fecha creación:04/02/2023
  fecha actualización: 06/02/2023
  Descripción: Este archivo se encarga de mostrar 
  los detalles de un producto
*@

<div class="container">
    <div class="d-flex d-flex justify-content-center vh-100">
        <div class="col-md-6 text-center">
            <h1>Detalles del producto</h1>
            <hr />
            <img src="~/img/producto/@Html.DisplayFor(model => model.Avatar)" height="300" width="300" />
            <dl class="row">
                <dt class="col-sm-6 text-end">
                    @Html.DisplayNameFor(model => model.Nombre):
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-6 text-end">
                    Código:
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class="col-sm-6 text-end">
                    Descripción:
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-6 text-end">
                    @Html.DisplayNameFor(model => model.Cantidad):
                </dt>
                <dd class="col-sm-6 text-start">
                    @Html.DisplayFor(model => model.Cantidad)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Id">Editar</a> &nbsp;
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model?.Id">Eliminar</a>&nbsp;
                <a asp-action="Index" class="btn btn-primary">  Regresar a la lista</a>
            </div>
        </div>
    </div>
</div>

